 SYSTEM=sub_system_2elec.f
 SYSTEM=sub_system_cos_hcn.f

here=`pwd`
DIR_vib=$here/../..
DIR_pot=$DIR_vib/sub_pot

 cp $SYSTEM $DIR_pot/sub_system.f

cd $DIR_vib
 make OPT=0
cd $here

 x1=0.538516066
 x2=0.461483933

export OMP_NUM_THREADS=1

nice $DIR_vib/vib << ** >res
 &system printlevel=2 GridTOBasis_test=t /
